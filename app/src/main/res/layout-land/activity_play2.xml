<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgq2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rtc.jeeranun.sahassaya.speedmath.PlayActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView15"
        android:layout_marginTop="130dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:layout_marginLeft="20dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView16"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="160dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView17"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="320dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView18"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="440dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView10"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="10"
        android:textSize="27sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:clickable="true" />


    <TextView
        android:id="@+id/textView11"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="20"
        android:textSize="27sp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView12"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="30"
        android:textSize="27sp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="200dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView13"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="40"
        android:textSize="27sp"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="220dp"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:clickable="true" />

    <TextView
        android:text=" 20 + 30 = ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="36sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Score = 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="-3dp" />



    <TextView
        android:text="Time : 30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_marginTop="-2dp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="400dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heard1"
            android:id="@+id/imageView12"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heard1"
            android:id="@+id/imageView13"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heard1"
            android:id="@+id/imageView14"
            android:layout_weight="1"
            android:elevation="1dp" />
    </LinearLayout>


</RelativeLayout>
