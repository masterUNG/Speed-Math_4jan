<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgq3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rtc.jeeranun.sahassaya.speedmath.PlayActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView22"
        android:layout_marginTop="180dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:layout_marginLeft="20dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView23"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="120dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView24"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="220dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView25"
        android:layout_marginTop="118dp"
        android:layout_marginLeft="310dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rabbit"
        android:id="@+id/imageView26"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="390dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView17"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="10"
        android:textSize="27sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="160dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:clickable="true" />


    <TextView
        android:id="@+id/textView18"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="20"
        android:textSize="27sp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="220dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView19"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="30"
        android:textSize="27sp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="200dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView20"
        android:background="@drawable/bgtext"
        android:gravity="center_vertical|center_horizontal"
        android:text="40"
        android:textSize="27sp"
        android:layout_marginLeft="440dp"
        android:layout_marginTop="220dp"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="normal|bold"
        android:clickable="true" />

    <TextView
        android:text=" 20 + 30 = ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="36sp"
        android:layout_marginTop="70dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Score = 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="-3dp" />



    <TextView
        android:text="Time : 30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_marginTop="-2dp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="400dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heard1"
            android:id="@+id/imageView19"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heard1"
            android:id="@+id/imageView20"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heard1"
            android:id="@+id/imageView21"
            android:layout_weight="1"
            android:elevation="1dp" />
    </LinearLayout>


</RelativeLayout>
